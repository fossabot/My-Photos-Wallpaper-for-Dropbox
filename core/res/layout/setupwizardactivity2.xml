<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <LinearLayout android:layout_weight="1" android:padding="24px" android:gravity="center"
                  android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">

        <TextView android:padding="12px" android:layout_height="wrap_content" android:layout_width="wrap_content"
                  android:text="You need to tell Dropbox that it's ok that this application can fetch photos from your account."/>
        <TextView android:padding="12px" android:layout_height="wrap_content" android:layout_width="wrap_content"
                  android:text="Press the button below to authorize your account"/>

        <Button android:layout_height="wrap_content" android:layout_width="wrap_content"
                android:text="Authorize Dropbox access" android:id="@+id/authorizeButton"/>


    </LinearLayout>

    <LinearLayout android:padding="24px" android:gravity="right" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:orientation="horizontal">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="&lt; Back"
                android:id="@+id/backButton"/>
        <Button android:enabled="false" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Next >"/>
    </LinearLayout>

</LinearLayout>